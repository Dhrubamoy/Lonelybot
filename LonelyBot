

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $LONELY_REPO == "LONELYBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RocnViYW1veS9Mb25lbHl1Yi9hcmNoaXZlL0xvbmVseXViLnppcA==" | base64 -d
    elif [[ $LONELY_REPO == "LONELYBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RocnViYW1veS9Mb25lbHl1Yi9hcmNoaXZlL0xvbmVseXViLnppcA==" | base64 -d
    elif [[ $LONELY_REPO =~ $regex ]]
    then
        if [[ $LONELY_REPO_BRANCH ]]
        then
            echo "${LONELY_REPO}/archive/${LONELY_REPO_BRANCH}.zip"
        else
            echo "${LONELY_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RocnViYW1veS9Mb25lbHl1Yi9hcmNoaXZlL0xvbmVseXViLnppcA==" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="LonelyBot.zip"
    echo "  Downloading âª¨LonelyboÏ„âª©  V1.O Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    LONELYPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  âª¨LonelyboÏ„âª©  V3.O Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $LONELYPATH
    echo "    âšœï¸Starting âª¨LonelyboÏ„âª© âšœï¸     "
    echo "
    ğŸ‡®ğŸ‡³ğŸ‡®ğŸ‡³OP âª¨LonelyboÏ„âª©  ï¿½
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
